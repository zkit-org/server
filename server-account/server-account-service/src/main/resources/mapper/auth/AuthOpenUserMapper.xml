<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zkit.support.server.account.auth.mapper.AuthOpenUserMapper">

    <resultMap id="ResultMap" type="org.zkit.support.server.account.auth.entity.dto.AuthOpenUser" extends="org.zkit.support.server.account.auth.mapper.base.AuthOpenUserBaseMapper.BaseResultMap">
    </resultMap>

    <sql id="Column_List">
        <include refid="org.zkit.support.server.account.auth.mapper.base.AuthOpenUserBaseMapper.Base_Column_List"/>
    </sql>

    <select id="findOneByPlatformAndOpenId" resultMap="ResultMap">
        select
        <include refid="Column_List"/>
        from auth_open_user
        where
        platform = #{platform,jdbcType=VARCHAR}
        AND open_id = #{openId,jdbcType=VARCHAR}
    </select>

    <update id="updateAccountIdById">
        update auth_open_user
        set account_id = #{accountId,jdbcType=NUMERIC}
        where id = #{id,jdbcType=NUMERIC}
    </update>

</mapper>
